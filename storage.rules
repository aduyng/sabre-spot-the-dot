rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    match /companies/{allPaths=**} {
      allow read: if request.auth != null;
    }

  	match /tmp/{allPaths=**} {
      allow read,write: if request.auth != null;
    }

    match /to-be-resized/{allPaths=**} {
      allow read,write: if request.auth != null;
    }


    match /thumbnails/{allPaths=**} {
      allow read: if true;
    }
  }
}
